                    <TextBox Name="shogitb" Canvas.Left="182" Canvas.Top="337" Text="TextBox" TextWrapping="Wrap" Width="467"/>
                    <Button Name="shogibutton" Content="Button" Canvas.Left="685" Canvas.Top="317" Canvas.Right="10" Click="shogibutton_ClickAsync"/>

                </Canvas>

