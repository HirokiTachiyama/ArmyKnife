<Window x:Class="ArmyKnife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmyKnife"
        mc:Ignorable="d"
        Title="ArmyKnife" Height="600" Width="800"
        >
    <Grid>
        <!-- 大外 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- メニュー -->
        <Menu Grid.Row="0">
            <MenuItem Header="Menu"/>
            <MenuItem Header="Help"/>
        </Menu>

        <!-- 本体 -->
        <TabControl Name="AK_TabControl" Grid.Row="1" SelectionChanged="TabControl_SelectionChanged">

            <!-- DokuWikiタブ: Grid 1x2, 左側がテキストエリア, 右が各種ラベル・ボタン -->
            <TabItem Name="DW_TabItem" Header="DokuWiki">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- 左、テキストエリア -->
                    <TextBox Name="DW_PageContentTextBox" Grid.Row="0" AcceptsReturn="True" Text="TextBox" HorizontalAlignment="Center" Width="397"/>

                    <!-- 右、各種ラベル、ボタン -->
                    <Canvas Grid.Row="0" Grid.Column="2">

                        <Label Name = "DW_UrlLabel" Content="DW_UrlLabel" Canvas.Left="10" Canvas.Top="10"/>
                        <Label Name = "DW_UserPassLabel" Content="DW_UserPassLabel" Canvas.Left="10" Canvas.Top="41"/>
                        <Button Name ="DW_LoadButton" Content="Load" Canvas.Left="9" Canvas.Top="72" Width="45" Click="DW_LoadButton_Clicked"/>
                        <Button Name ="DW_SaveButton" Content="Save" Canvas.Left="80" Canvas.Top="72" Width="45" Click="DW_SaveButton_Clicked"/>

                        <TreeView Name="DW_TreeView" Width="379" 
                                  Canvas.Top="120" Canvas.Left="8" Canvas.Right="10" Canvas.Bottom="10" Height="230"
                                  ItemsSource="{Binding DW_TreeViewRoot}" Margin="5,5,5,5"
                                  
                                  />

                    </Canvas>

                </Grid>

            </TabItem>

            <!-- 将棋タブ -->
            <TabItem Name="SY_TabItem" Header="Syogi" KeyDown="SY_TabItem_KeyDown">

                <Canvas>

                    <Label Name="SY_sLabel"   Content="先手" Canvas.Top="481" Width="300"/>
                    <Label Name="SY_gLabel"    Content="後手" Width="300"/>
                    <Label Name="SY_CommandLabel" Content="Command" Canvas.Left="382" Canvas.Top="13" Width="314" FontSize="24"/>

                    <Grid Name="SY_GobanGrid"  Height="450" Width="350" Canvas.Top="26" ShowGridLines="True" Background="WhiteSmoke" Canvas.Left="10"/>

                    <TextBox Name="testTB" Canvas.Left="412" Canvas.Top="97" Text="TextBox" TextWrapping="Wrap" Width="372" Height="261" TextChanged="testTB_TextChanged"/>
                    <TextBox Name="shogitb" Canvas.Left="412" Canvas.Top="381" Text="URL?" TextWrapping="Wrap" Width="372"/>
                    <Button Name="shogibutton" Content="Get" Canvas.Left="752" Canvas.Top="413" Canvas.Right="10" Click="shogibutton_ClickAsync"/>

                </Canvas>

            </TabItem>
            <TabItem Name="LV_TabItem" Header="LogViewer" HorizontalAlignment="Center" Height="20" VerticalAlignment="Center">

